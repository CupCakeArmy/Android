<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="io.nicco.r6s.home"
    tools:showIn="@layout/app_bar_home"
    android:id="@+id/main_cont">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="8dp"
        android:visibility="gone">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_w_b"
            android:layout_marginBottom="2dp">

            <TextView
                android:id="@+id/home_op"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:padding="16dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_margin="16dp"
                android:text="OPERATORS"
                android:background="#ffffffff" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_w"
            android:layout_marginBottom="2dp">

            <TextView
                android:id="@+id/home_weapons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:padding="16dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_margin="16dp"
                android:text="WEAPONS"
                android:background="#ffffffff" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="2dp"
            android:background="@color/main_bg">

            <TextView
                android:id="@+id/home_rand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:padding="16dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_margin="16dp"
                android:text="RANDOM"
                android:background="#ffffffff" />

        </FrameLayout>

    </LinearLayout>

</RelativeLayout>
